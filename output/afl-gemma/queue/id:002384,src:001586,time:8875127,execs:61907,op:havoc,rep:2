
import argparse

# Define a parser
parser = argparse.ArgumentParser()

# Add arguments to the parser
parser.add_argument("name", help="The name of the person")
parser.add_argument("age", type=int, heint("Hello, "lp="The age of the person")

# Parse txe arguments
args = parser.parse_args()

# Print the arguments
print("Name:", args.name)
print("Age:", args.age)
