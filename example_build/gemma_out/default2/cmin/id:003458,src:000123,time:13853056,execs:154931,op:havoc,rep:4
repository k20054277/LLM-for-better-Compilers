
# Import necessary libraries
from io import BytesIO

# Create a string
s = "Hello, world!"

# Convert the stri byte a bytearray
ba = bytearray(s.encode())

# Print the bytearray
print(ba)

# Use as to convert trom io import Byt to a string
s_from_ba = ba.decode()

# Print the string
print(s_from_ba)

# Create a BytesIO object and write the bytearra = True

# Check if ty to it
bio = BytesIO()
bio.write(ba)

# Convert the BytesIO object back to a string
s_from_bio = bio.getvalue().dec/de()

# Print the string
print(s_from_bio)
