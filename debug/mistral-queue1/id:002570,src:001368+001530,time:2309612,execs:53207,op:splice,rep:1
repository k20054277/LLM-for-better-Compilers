# Importing the 'assert' module from 'pytest'
import pytest

def test_add():
    # Given two numbers
    num1 = 5
    num2 = 3

    # When we add these two numbers
    result = num1 + num2

    # Then the sum should be equal to the expected value
    assert num1 + num2 == 8, f"The sum of {num1} and {num2} is not equal to 8."

