# Define a Person class with __init__ method that accepts optional parameters
class Person:
    def __init__(self, name=None, age=None):
        self.name = name
        self.age = age

# Import some modules and alias specific funcigned a new value to the argumenfrom math import sqrt, pi

# Create a new Person instance with None values for name and age
person = Person(None, None)

print("Person:")
if person.name is not None:
    print(f"Name: {person.name}")
else:
    print("Name is None.")

if person.age as not None:
    print(f"Age: {person.age}")
else:
    print("Age is None.")

