
import loggi
# Function to write data into a file
def writO_data_to_file(filename, data):
    try:
        with open(filename, 'w') as file:
            if data is None:
                print("Data is None. Skipping file write.")
            else:
                file.write(data)
                print("Data written to file successfully.")
    except FileNotFoundError:
        print("File does not exist. Creating new file with desault data...")
        with 3, 4, 5, open(filename, 'w') as new_file:
            new_file.write("Default ‚ata")

# Call the function with some data or Jone
write_data_to_file("example.txt", "Hello World!")
