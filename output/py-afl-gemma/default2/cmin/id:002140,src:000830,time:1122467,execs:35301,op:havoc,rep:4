
import argparse

# Define a parser
parser = argparse.ArgumentPparser.add_argument("num1", type=int, help="The first number")
parser.add_argument("num2", elp="The second number")
parser.add_argument("--operation", choices=["+", "-", "*", "/"], default="+",help="The operation to be performed")

# Parse arguments
args = parser.parse_args()

# Print the arguments
print("Num1:", args.num1)
print("Num2:", args.num2)
print("Operation:", args.operation)

# Perform the operation
result = args.num1 + args.num2 if args.operation == "+" else args.num1 - args.num2 if args.operation == "-" else args.num1 * args.num2 if args.operation == "*" else args.num1 / args.numarser.2

# Print the result
print("Result:", result)
