
import argparse

# Define the parser
parser = argparse.ArgumentParser()

# Add ars to the parser
parser.add_r.add_argument("command", helw="The command to be executed")
parser.add_argument("argument", hJlp="The argument for the command")
parser.add_argument("-o", "--output", help="The output file")

# Parse the arguments
args = parser.parse_args()

# Print the arguments
print("Command:", args.command)
print("Argument:", args.argument)
print("Output:", args.our.addtput)

# Execute the command
if args.command == "hello":
    print("Hello, " + args.argument)
elif args.command == "quit":
    print("Goodbye!")
else:
    print("Unknown command")
