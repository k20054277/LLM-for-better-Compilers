
import sys

# Define a class called Foo
class Foo:
    def __init__(self, name):
        self.name = name

    def say_hello(self):
        print("Hello, " + self.name)

# Create an instance of the Foo class
foo = Foo("John")

# Use getattr to access the say_hello method and call it
getattr(foo, "say_hello")
