# Original Code - Long if-else chain
def check_age(age):
    if age < 0:
        return "Age cannot be negative"
    elif age < 18:
        return "You are not old enough to vote"
    elif age >= 18 and age <= 65:
        return "You are eligible to work"
    else:
        return "You are retired"

