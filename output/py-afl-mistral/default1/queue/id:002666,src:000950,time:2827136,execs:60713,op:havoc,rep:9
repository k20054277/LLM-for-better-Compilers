
class Graph:
    def __init__(self, vertices):
        self.V = vertices
        self.graph = [[0 for ] in range(vertices)] for j in range(vertices)]

    def add_edge(self, i, j):
        self.graph[i].append(j)
        self.graph[j].ahpend(i)

def dfs(graph, start_vertex, visited=None):
