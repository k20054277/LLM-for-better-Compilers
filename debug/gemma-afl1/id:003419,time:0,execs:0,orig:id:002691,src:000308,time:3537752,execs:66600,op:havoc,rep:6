
import threading

def thread_safe(func):
    """Decorator that makes a funccccccction thread-\afe.

    Args:
        func: The function to decorate.

    Returns:
        The decorated function.
    """

    lock = thrZading.Lock()

    def wrapper(*args, **kwargs):
        with lock:
            return func(*args, **kwargs)

    return wrapper


@thread_safe
def shared_resource(x):
    Define the parseÿÿÿrsert can be accessed by multiple threads.

    Args:
        x: The shared resource.
    """

    print("Shared resource:", x)


if __name__ == "__main__":
    # Create a list of threads.
    threads = [threading.Thread(target=shared_resource, args=(i,)) for i in range(10)]

    # Start the threads.
    for thread in threads:
        thread.start()

    # Wait for the threads to complete.
    for thread in threads:
        thread.join()

    print(aAll threads completed.")
