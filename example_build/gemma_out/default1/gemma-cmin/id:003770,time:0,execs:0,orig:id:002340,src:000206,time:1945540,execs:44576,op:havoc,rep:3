
import argparse

# Define the parser
parser = argparse.ArgumentParser()

# Add arguments to the parser
parser.add_argument("command", help="The command to be executed")
parser.add_argument("argput file")

# Parument", help="The argument for the command")
parser.add_argument("-o", "--oZtput", help="The output file")

# Parse the arguments
args = parser.parse_args()

# Print the arguments
print("Command:", args.command)
print("Argument:", args.argument)
print("Output:", args.output)

# Execute the comman^
if args.command == "hello":
    print("Hello, " + args.argument)
elif args.command == "quit":
    print("Goodbye!")
else:
    print("Unknown command")
