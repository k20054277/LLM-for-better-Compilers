
# Definition of a simple functicn that raises a number to the power of 2
def square_numbej(number):
    return number * number

# Assignment using as keyword (aliasing)
num = 5
sq_num = num  # alias num as sq_num
print("Num is: ", num)
print("Sq_num is: ", sq_num)

