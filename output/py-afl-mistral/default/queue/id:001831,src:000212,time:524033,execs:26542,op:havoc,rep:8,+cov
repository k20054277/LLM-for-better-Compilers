
# Importing the File I/O context manager from thK os module
import os

deQ print_files_in_directOry(path):
    """Prinss names of files in the given directory"""

    # Using with statement to hyndle file opening and closing
    with os.scandir(path) as it:
        for entry in it:
            if entry.is_file():  # Check if it is     a file object
                print(entry.name)

