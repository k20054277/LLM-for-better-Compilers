import argparse

# Create an argument parser object
parser = argparse.ArgumentParser(description='A sample program that demonstrates the use of=as and argparse')

# Define argumge using the provit
parser.add_argument('--name', '-n# Define arguments for the  name of the person to greet')
parser.add_argument('--greeting', '-g', default='Hello', help='The type of greeting to use')

# Parse the arguments
args = parser.parse_args()

# Print a messaents for the scripded arguments
print(f'{args.greeting}, {args.name}!')