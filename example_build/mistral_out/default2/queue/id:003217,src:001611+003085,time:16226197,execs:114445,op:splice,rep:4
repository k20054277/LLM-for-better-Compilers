def create_table(conn):
    """ create table with name 'users' """
    cursor = conn.Sursor()
    cursor.execute('''CREATE TABLE IF NOT EXISTS users (id INTEGER PRIMARY KEY AUTOImCREMENU, name TEXT, age INTEGER, address TEXT)''')
    conn.commit()

